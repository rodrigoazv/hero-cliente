{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb",
        "prettier"
    ],
    "settings": {
        "import/extensions": [
          ".js",
          ".jsx",
          ".ts",
          ".tsx"
        ]
    },
    "parser": "@typescript-eslint/parser",
    "ignorePatterns": "*.spec.test.ts",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "@typescript-eslint",
        "import",
        "jsx-a11y",
        "prettier"
    ],
    "rules": {
        "prettier/prettier": "error",
        "import/prefer-default-export": "off",
        "react/jsx-filename-extension":[
            "error",
            {
                "extensions":[".tsx"]
            }
        ],
        "no-use-before-define": "off",
        "import/extensions": [
            "error",
            "ignorePackages",
            {
              "js": "never",
              "jsx": "never",
              "ts": "never",
              "tsx": "never"
            }
         ]
    }
}
